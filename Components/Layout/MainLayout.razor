@inherits LayoutComponentBase
@inject NavigationManager NavigationManager

<div class="page d-flex flex-column min-vh-100">
    <AuthorizeView>
        <Authorized>
            <header class="top-navbar glass-card m-2 mb-0 px-4 py-2 d-flex justify-content-between align-items-center shadow-sm">
                <div class="d-flex align-items-center gap-3">
                    <a href="" class="navbar-brand-custom">
                        <div class="logo-box bg-primary text-white rounded-circle d-flex align-items-center justify-content-center shadow-sm">
                            <span class="bi bi-mortarboard-fill"></span>
                        </div>
                        <span class="brand-text fw-800 text-slate-900 ms-2">Scio</span>
                    </a>
                    <nav class="d-none d-md-flex gap-4 ms-4">
                        <NavLink class="nav-link-custom" href="" Match="NavLinkMatch.All">Dashboard</NavLink>
                    </nav>
                </div>
                <div class="d-flex align-items-center gap-3">
                    <div class="user-info d-none d-sm-block text-end">
                        <div class="x-small fw-bold text-muted uppercase-title">Učitel</div>
                        <div class="small fw-700 text-slate-800">@context.User.Identity?.Name</div>
                    </div>
                    <a href="auth/logout" class="btn btn-light-danger btn-sm rounded-3 px-3 fw-bold x-small">
                        <span class="bi bi-box-arrow-right"></span> Odhlásit
                    </a>
                </div>
            </header>
        </Authorized>
    </AuthorizeView>

    <main class="flex-grow-1 overflow-hidden">
        <div class="h-100 overflow-auto">
            @Body
        </div>
    </main>
</div>

<div id="blazor-error-ui" class="glass-card shadow-lg p-3 m-3 position-fixed bottom-0 start-0 z-3 d-none">
    <span class="text-danger fw-bold"><span class="bi bi-exclamation-octagon"></span> Nastala chyba.</span>
    <a href="." class="reload btn btn-sm btn-primary ms-3">Obnovit</a>
    <span class="dismiss ms-3 cursor-pointer">🗙</span>
</div>

<style>
    .navbar-brand-custom {
        display: flex;
        align-items: center;
        text-decoration: none;
    }
    .logo-box { width: 32px; height: 32px; font-size: 1rem; }
    .brand-text { font-size: 1.25rem; letter-spacing: -0.02em; }
    
    .nav-link-custom {
        color: var(--text-muted);
        font-weight: 600;
        font-size: 0.9rem;
        text-decoration: none;
        padding: 0.5rem 0;
        border-bottom: 2px solid transparent;
        transition: all 0.2s;
    }
    .nav-link-custom:hover, .nav-link-custom.active {
        color: var(--primary);
        border-bottom-color: var(--primary);
    }
    
    .cursor-pointer { cursor: pointer; }
    
    .h-screen-100 { height: 100vh; }
    
    /* Blazor Default Cleanup */
    .top-row { display: none !important; }
    .sidebar { display: none !important; }
</style>
