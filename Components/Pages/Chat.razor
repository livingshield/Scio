@page "/chat/{GroupId:int}"
@rendermode InteractiveServer
@using Microsoft.AspNetCore.SignalR.Client
@using ScioApp.Models
@using ScioApp.Services
@inject IStudentService StudentService
@inject IGroupService GroupService
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime
@implements IAsyncDisposable

<PageTitle>Chat - @group?.Name</PageTitle>

@if (isLoading)
{
    <div class="min-vh-100 d-flex flex-column align-items-center justify-content-center text-center">
        <div class="spinner-border text-primary mb-4" style="width: 4rem; height: 4rem;" role="status"></div>
        <h4 class="fw-bold">Připojování k výuce...</h4>
        <p class="text-muted">Navazování spojení se serverem</p>
    </div>
}
else if (student != null)
{
    <div class="d-flex flex-column" style="height: 100vh;">
        <!-- Header -->
        <header class="p-3 border-bottom border-white-10 glass-card mx-2 mt-2 rounded-4 mb-2">
            <div class="container-fluid d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center gap-3">
                    <div class="bg-primary-custom rounded-3 d-flex align-items-center justify-content-center" style="width: 44px; height: 44px;">
                        <span class="bi bi-chat-dots-fill text-white fs-4"></span>
                    </div>
                    <div>
                        <h1 class="h6 mb-0 fw-bold">@group?.Name</h1>
                        <div class="small d-flex align-items-center gap-2">
                            <span class="status-dot @(hubConnection?.State == HubConnectionState.Connected ? "bg-success" : "bg-danger")"></span>
                            <span class="text-muted">@(hubConnection?.State == HubConnectionState.Connected ? "Online" : "Odpojeno")</span>
                        </div>
                    </div>
                </div>
                <div class="d-flex align-items-center gap-3">
                    <div class="badge bg-white-5 border border-white-10 text-primary py-2 px-3 rounded-pill fw-medium">
                        <span class="bi bi-person-fill me-1"></span> @student.Nickname
                    </div>
                    <button class="btn btn-sm btn-outline-light border-white-10 rounded-pill px-3 py-2" @onclick="LogoutStudent">
                        <span class="bi bi-box-arrow-right me-1"></span> Odhlásit se
                    </button>
                </div>
            </div>
        </header>

        <main class="flex-grow-1 overflow-hidden p-2">
            <div class="row h-100 g-3">
                <!-- Sidebar (Goal & Progress) -->
                <div class="col-lg-4 d-none d-lg-flex flex-column h-100">
                    <div class="glass-card p-4 h-100 overflow-auto">
                        <div class="section-label mb-3">INSTRUKCE K ÚKOLU</div>
                        <div class="p-3 rounded-3 bg-white-5 border-start border-primary border-4 mb-4">
                            <p class="mb-0 small text-light leading-relaxed">@group?.GoalDescription</p>
                        </div>

                        <div class="section-label mb-3">VÁŠ AKTUÁLNÍ POKROK</div>
                        <div class="progress-box p-4 rounded-4 bg-white-5 border border-white-10">
                            <div class="d-flex justify-content-between align-items-end mb-3">
                                <span class="small text-muted fw-bold">STAV PLNĚNÍ:</span>
                                <span class="h2 mb-0 fw-bold text-primary">@((int)(student.ProgressLog?.Percentage ?? 0))%</span>
                            </div>
                            
                            @if (group?.GoalType == GoalType.Boolean)
                            {
                                <div class="text-center p-3 rounded-3 border @(student.ProgressLog?.IsCompleted == true ? "border-success bg-success-soft" : "border-white-10")">
                                    @if (student.ProgressLog?.IsCompleted == true)
                                    {
                                        <div class="text-success"><span class="bi bi-check-circle-fill h1"></span></div>
                                        <div class="fw-bold text-success">Úkol splněn!</div>
                                    }
                                    else
                                    {
                                        <div class="text-muted opacity-25"><span class="bi bi-circle h1"></span></div>
                                        <div class="text-muted fw-medium">Zatím nesplněno</div>
                                    }
                                </div>
                            }
                            else
                            {
                                <div class="progress mb-3 bg-dark border border-white-10" style="height: 12px; border-radius: 6px;">
                                    <div class="progress-bar bg-primary-custom progress-bar-striped progress-bar-animated" 
                                         role="progressbar" 
                                         style="width: @(student.ProgressLog?.Percentage ?? 0)%"></div>
                                </div>
                                <div class="text-center small text-muted">
                                    Dosáhl jste <span class="text-primary fw-bold">@(student.ProgressLog?.CurrentValue ?? 0)</span> z <span class="text-primary fw-bold">@(group?.TargetValue ?? 0)</span> jednotek.
                                </div>
                            }
                        </div>

                        <div class="mt-auto pt-4 border-top border-white-10">
                            <button class="btn @(isNeedsHelp ? "btn-danger" : "btn-outline-danger") w-100 py-3 rounded-3 fw-bold d-flex align-items-center justify-content-center gap-2" @onclick="ToggleHelp">
                                <span class="bi @(isNeedsHelp ? "bi-broadcast-pin" : "bi-question-circle") fs-5"></span>
                                @(isNeedsHelp ? "ŽÁDOST O POMOC JE AKTIVNÍ" : "POTŘEBUJI POMOC")
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Chat Area -->
                <div class="col-lg-8 d-flex flex-column h-100 overflow-hidden">
                    <div class="glass-card d-flex flex-column h-100 overflow-hidden">
                        <!-- Messages -->
                        <div id="chatLines" class="flex-grow-1 p-3 overflow-auto d-flex flex-column gap-3">
                            @foreach (var msg in messages)
                            {
                                var isOwn = msg.StudentId == student.Id;
                                <div class="d-flex @(isOwn ? "justify-content-end" : "justify-content-start") fade-in">
                                    <div class="message-bubble @(msg.IsFromTeacher ? "bg-purple-soft" : (isOwn ? "bg-primary-soft" : "bg-white-5")) @(msg.IsProgressContribution ? "border-success-shine" : "")">
                                        <div class="message-meta d-flex justify-content-between align-items-center mb-1">
                                            <span class="small fw-bold @(isOwn ? "text-primary" : (msg.IsFromTeacher ? "text-purple" : "text-muted"))">
                                                @(isOwn ? "Vy" : (msg.IsFromTeacher ? "Učitel" : msg.Nickname))
                                            </span>
                                            <span class="opacity-50" style="font-size: 0.7rem;">@msg.Timestamp.ToLocalTime().ToString("HH:mm")</span>
                                        </div>
                                        
                                        <div class="message-content">
                                            @if (msg.Content.Contains("$") || msg.Content.Contains("\\"))
                                            {
                                                <div class="math-container">@((MarkupString)msg.Content)</div>
                                            }
                                            else
                                            {
                                                @msg.Content
                                            }
                                        </div>

                                        @if (msg.IsProgressContribution)
                                        {
                                            <div class="badge bg-success-soft text-success small border border-success mt-2 d-inline-block">
                                                <span class="bi bi-star-fill me-1"></span> Tato zpráva vedla k pokroku
                                            </div>
                                        }

                                        @if (msg.Metadata != null && !string.IsNullOrEmpty(msg.Metadata.StudentFeedback))
                                        {
                                            <div class="mt-2 p-2 rounded-3 bg-white-5 border-start border-primary italic small opacity-75">
                                                <span class="bi bi-robot text-primary me-1"></span> @msg.Metadata.StudentFeedback
                                            </div>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                        
                        <!-- Input -->
                        <div class="p-3 border-top border-white-10 bg-black-20">
                            @if (showInactivityWarning)
                            {
                                <div class="alert alert-warning py-2 mb-3 small d-flex align-items-center gap-2 fade-in">
                                    <span class="bi bi-alarm"></span> Detekována neaktivita. Pracujete stále na úkolu?
                                </div>
                            }
                            <div class="d-flex gap-2 align-items-end">
                                <button class="btn btn-outline-light rounded-circle shadow-sm" @onclick="StartVoice" style="width: 48px; height: 48px; flex-shrink: 0;">
                                    <span class="bi bi-mic @(isListening ? "text-danger" : "")"></span>
                                </button>
                                <div class="flex-grow-1">
                                    <textarea id="chatInput" @bind="newMessage" @bind:event="oninput" @onkeydown="@HandleKeyDown"
                                              class="form-control form-control-custom" rows="1" 
                                              placeholder="Napište zprávu..."
                                              style="resize: none;"></textarea>
                                </div>
                                <button class="btn btn-primary-custom rounded-circle shadow-sm" @onclick="SendMessage" disabled="@(string.IsNullOrWhiteSpace(newMessage))" style="width: 48px; height: 48px; flex-shrink: 0;">
                                    <span class="bi bi-send-fill text-white"></span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
}

<style>
    .section-label { font-size: 0.75rem; font-weight: 800; color: var(--text-muted); letter-spacing: 0.5px; }
    .status-dot { width: 8px; height: 8px; border-radius: 50%; display: inline-block; }
    .bg-white-5 { background: rgba(255, 255, 255, 0.05); }
    .bg-black-20 { background: rgba(0, 0, 0, 0.2); }
    .bg-primary-soft { background: rgba(0, 210, 255, 0.1); border: 1px solid rgba(0, 210, 255, 0.2); }
    .bg-purple-soft { background: rgba(168, 85, 247, 0.1); border: 1px solid rgba(168, 85, 247, 0.2); }
    .text-purple { color: #a855f7; }
    .bg-success-soft { background: rgba(34, 197, 94, 0.1); border: 1px solid rgba(34, 197, 94, 0.2); }
    .border-success-shine { border-color: #22c55e !important; box-shadow: 0 0 10px rgba(34, 197, 94, 0.2); }
    .border-white-10 { border-color: rgba(255, 255, 255, 0.1) !important; }
    
    .message-bubble {
        max-width: 85%;
        padding: 12px 16px;
        border-radius: 16px;
        position: relative;
    }
</style>

@code {
    [Parameter] public int GroupId { get; set; }
    [SupplyParameterFromQuery] public string? Nick { get; set; }
    [SupplyParameterFromQuery] public string? Device { get; set; }

    private Group? group;
    private Student? student;
    private List<ChatMessage> messages = new();
    private string newMessage = "";
    private bool isNeedsHelp = false;
    private bool isListening = false;
    private HubConnection? hubConnection;
    private DotNetObjectReference<Chat>? objRefContent;
    private bool isLoading = true;

    private System.Threading.Timer? inactivityTimer;
    private bool showInactivityWarning = false;
    private DateTime lastActivityTime = DateTime.UtcNow;

    public class ChatMessage : Message
    {
        public MessageMetadata? Metadata { get; set; }
        public string? Nickname { get; set; }
    }

    public class MessageMetadata
    {
        public bool IsRelevant { get; set; } = true;
        public string? StudentFeedback { get; set; }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            var deviceId = await JSRuntime.InvokeAsync<string>("localStorage.getItem", "scio_device_id");
            var myNick = await JSRuntime.InvokeAsync<string>("localStorage.getItem", $"scio_group_{GroupId}_nick");

            if (string.IsNullOrEmpty(myNick) && !string.IsNullOrEmpty(Nick))
            {
                myNick = Nick;
                await JSRuntime.InvokeVoidAsync("localStorage.setItem", $"scio_group_{GroupId}_nick", myNick);
            }
            if (string.IsNullOrEmpty(deviceId) && !string.IsNullOrEmpty(Device))
            {
                deviceId = Device;
                await JSRuntime.InvokeVoidAsync("localStorage.setItem", "scio_device_id", deviceId);
            }

            if (string.IsNullOrEmpty(deviceId) || string.IsNullOrEmpty(myNick))
            {
                NavigationManager.NavigateTo($"vstup/{GroupId}");
                return;
            }

            student = await StudentService.GetStudentByNicknameAndDeviceAsync(GroupId, myNick, deviceId);
            if (student == null) { NavigationManager.NavigateTo($"vstup/{GroupId}"); return; }

            group = student.Group;
            isNeedsHelp = student.Status == StudentStatus.NeedHelp;

            var history = await GroupService.GetGroupMessagesAsync(GroupId);
            messages = history.Select(m => new ChatMessage {
                Id = m.Id, StudentId = m.StudentId, Content = m.Content, Timestamp = m.Timestamp,
                IsProgressContribution = m.IsProgressContribution, IsFromTeacher = m.IsFromTeacher,
                Nickname = m.StudentId == 0 ? "Systém" : (m.IsFromTeacher ? "Učitel" : m.Student?.Nickname),
                Student = m.Student, IsSystemMessage = m.IsSystemMessage
            }).ToList();

            hubConnection = new HubConnectionBuilder()
                .WithUrl(NavigationManager.ToAbsoluteUri("sciohub"))
                .WithAutomaticReconnect().Build();

            hubConnection.On<int, int, string, DateTime, bool, bool, string, bool>("ReceiveMessage", (mid, sid, content, time, isProgress, isRelevant, feedback, isTeacher) =>
            {
                if (messages.Any(m => m.Id == mid && mid != 0)) return;
                var nick = sid == 0 ? "Systém" : (isTeacher ? "Učitel" : (sid == student?.Id ? student?.Nickname : "Spolužák"));
                messages.Add(new ChatMessage { Id = mid, StudentId = sid, Content = content, Timestamp = time, IsProgressContribution = isProgress, IsFromTeacher = isTeacher, Metadata = new MessageMetadata { IsRelevant = isRelevant, StudentFeedback = feedback }, Nickname = nick });
                if (sid == student?.Id) ResetWatchdog(); InvokeAsync(StateHasChanged); ScrollToBottom(); JSRuntime.InvokeVoidAsync("renderMath");
            });

            hubConnection.On<int, int>("ProgressUpdated", (sid, val) => { if (student != null && sid == student.Id && student.ProgressLog != null) { student.ProgressLog.CurrentValue = val; InvokeAsync(StateHasChanged); } });
            hubConnection.On<int, StudentStatus>("StatusChanged", (sid, status) => { if (student != null && sid == student.Id) { student.Status = status; isNeedsHelp = status == StudentStatus.NeedHelp; InvokeAsync(StateHasChanged); } });

            await hubConnection.StartAsync();
            await hubConnection.InvokeAsync("JoinGroup", GroupId, deviceId, myNick, false);
            StartWatchdog(); isLoading = false; StateHasChanged(); ScrollToBottom();
        }
    }

    private void StartWatchdog() => inactivityTimer = new System.Threading.Timer((_) => WatchdogCheck(), null, 10000, 10000);
    private void ResetWatchdog() { lastActivityTime = DateTime.UtcNow; showInactivityWarning = false; }
    private async void WatchdogCheck() { var inactive = (DateTime.UtcNow - lastActivityTime).TotalSeconds; bool warn = inactive > 180; if (warn != showInactivityWarning) { showInactivityWarning = warn; await InvokeAsync(StateHasChanged); } }

    private async Task SendMessage() { if (string.IsNullOrWhiteSpace(newMessage) || student == null || hubConnection == null) return; var content = newMessage; newMessage = ""; await hubConnection.InvokeAsync("SendMessage", GroupId, student.Id, content); }
    private async Task HandleKeyDown(KeyboardEventArgs e) { if (e.Key == "Enter" && !e.ShiftKey) await SendMessage(); }
    private async Task ToggleHelp() { if (student == null || hubConnection == null) return; isNeedsHelp = !isNeedsHelp; await hubConnection.InvokeAsync("SignalNeedHelp", GroupId, student.Id, isNeedsHelp); }
    private void ScrollToBottom() => JSRuntime.InvokeVoidAsync("scrollToBottom", "chatLines");
    private async Task StartVoice() { isListening = true; objRefContent = DotNetObjectReference.Create(this); await JSRuntime.InvokeVoidAsync("startVoiceRecognition", objRefContent); }
    [JSInvokable] public void OnVoiceResult(string text) { newMessage += (string.IsNullOrEmpty(newMessage) ? "" : " ") + text; isListening = false; StateHasChanged(); }
    
    private async Task LogoutStudent()
    {
        // Vymazat LocalStorage klíče
        await JSRuntime.InvokeVoidAsync("localStorage.removeItem", $"scio_device_{GroupId}");
        await JSRuntime.InvokeVoidAsync("localStorage.removeItem", $"scio_nick_{GroupId}");
        
        // Odpojit SignalR
        if (hubConnection != null)
        {
            await hubConnection.StopAsync();
            await hubConnection.DisposeAsync();
        }
        
        // Přesměrovat na vstupní stránku
        NavigationManager.NavigateTo($"/vstup/{group?.InviteCode ?? GroupId.ToString()}", true);
    }
    
    public async ValueTask DisposeAsync() { objRefContent?.Dispose(); inactivityTimer?.Dispose(); if (hubConnection != null) await hubConnection.DisposeAsync(); }
}
