        font-weight: 500;
    }

    .contribution-badge {
        color: var(--secondary);
        font-weight: 700;
        font-size: 0.65rem;
        display: flex;
        align-items: center;
        gap: 0.2rem;
    }

    .own .contribution-badge { color: #86efac; }
    .own .bubble-footer { opacity: 0.8; }

    .ai-feedback {
        font-size: 0.8rem;
        font-style: italic;
        color: var(--primary);
    }

    .is-irrelevant {
        opacity: 0.6;
        filter: grayscale(0.5);
    }

    .bg-success-light { background-color: #f0fdf4; }

    .scale-up {
        animation: scaleUp 0.3s ease-out;
    }
    @@keyframes scaleUp {
        from { transform: scale(0.8); }
        to { transform: scale(1); }
    }

    .fw-700 { font-weight: 700; }
</style>
