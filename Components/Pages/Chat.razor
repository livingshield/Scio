@page "/chat/{GroupId:int}"
@rendermode InteractiveServer
@using Microsoft.AspNetCore.SignalR.Client
@using ScioApp.Models
@using ScioApp.Services
@inject IStudentService StudentService
@inject IGroupService GroupService
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime
@implements IAsyncDisposable

<PageTitle>@group?.Name - Scio</PageTitle>

@if (isLoading)
{
    <div class="d-flex justify-content-center align-items-center" style="height: 100vh; background: linear-gradient(135deg, #f8fafc 0%, #eef2ff 100%);">
        <div class="text-center fade-in">
            <div class="spinner-border text-primary mb-3" role="status" style="width: 3rem; height: 3rem;"></div>
            <div class="h5 text-muted fw-light">Připravujeme učebnu...</div>
        </div>
    </div>
}
else if (student != null)
{
    <div class="chat-wrapper fade-in">
        <header class="chat-header glass-card m-2">
            <div class="container-fluid d-flex justify-content-between align-items-center py-2 px-3">
                <div class="d-flex align-items-center gap-3">
                    <div class="header-icon bg-primary text-white rounded-circle d-flex align-items-center justify-content-center shadow-sm" style="width: 40px; height: 40px;">
                        <span class="bi bi-chat-heart-fill"></span>
                    </div>
                    <div>
                        <h1 class="h6 mb-0 fw-bold text-truncate" style="max-width: 200px;">@group?.Name</h1>
                        <div class="small text-muted d-flex align-items-center gap-1">
                            <span class="status-dot @(hubConnection?.State == HubConnectionState.Connected ? "connected" : "disconnected")"></span>
                            @(hubConnection?.State == HubConnectionState.Connected ? "Online" : "Odpojeno")
                        </div>
                    </div>
                </div>
                <div class="header-actions">
                    <div class="badge bg-white text-dark shadow-sm d-flex align-items-center gap-2 py-2 px-3 border-0">
                        <span class="bi bi-person-circle text-primary"></span>
                        <span>@student.Nickname</span>
                    </div>
                </div>
            </div>
        </header>

        <main class="chat-main container-fluid pb-3 h-100 overflow-hidden">
            <div class="row h-100 g-3">
                <!-- Sidebar -->
                <div class="col-lg-4 col-md-5 d-none d-md-flex flex-column h-100 overflow-auto pb-5">
                    <div class="goal-sidebar glass-card p-4">
                        <div class="d-flex align-items-center gap-2 mb-3">
                            <span class="bi bi-star-fill text-warning"></span>
                            <h2 class="h6 mb-0 fw-bold uppercase-title">Tvůj úkol</h2>
                        </div>
                        <div class="goal-box p-3 rounded-4 bg-white border border-light mb-4 shadow-sm">
                            <p class="mb-0 small text-dark leading-relaxed">@group?.GoalDescription</p>
                        </div>

                        <div class="progress-section mt-4">
                            <div class="d-flex justify-content-between align-items-end mb-2">
                                <span class="small fw-bold text-muted">Tvůj pokrok</span>
                                <span class="h4 mb-0 text-primary fw-700">@((int)(student.ProgressLog?.Percentage ?? 0))%</span>
                            </div>
                            
                            @if (group?.GoalType == GoalType.Boolean)
                            {
                                <div class="boolean-goal text-center p-3 rounded-4 @(student.ProgressLog?.IsCompleted == true ? "bg-success-light border-success" : "bg-light border") border-2 transition-all">
                                    @if (student.ProgressLog?.IsCompleted == true)
                                    {
                                        <div class="text-success scale-up"><span class="bi bi-check-circle-fill h1"></span></div>
                                        <div class="fw-bold text-success">Skvělá práce! Splněno!</div>
                                    }
                                    else
                                    {
                                        <div class="text-muted opacity-50"><span class="bi bi-circle h1"></span></div>
                                        <div class="text-muted fw-medium">Zatím se pracuje...</div>
                                    }
                                </div>
                            }
                            else
                            {
                                <div class="progress mb-2 shadow-xs" style="height: 12px; border-radius: 10px;">
                                    <div class="progress-bar @(student.ProgressLog?.IsCompleted == true ? "bg-success" : "bg-primary") progress-bar-striped progress-bar-animated" 
                                         role="progressbar" 
                                         style="width: @(student.ProgressLog?.Percentage ?? 0)%" 
                                         aria-valuenow="@(student.ProgressLog?.Percentage ?? 0)" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                                <div class="text-center x-small text-muted">
                                    Dosáhl jsi <strong>@(student.ProgressLog?.CurrentValue ?? 0)</strong> z <strong>@(group?.TargetValue ?? 0)</strong>
                                </div>
                            }
                        </div>

                        <div class="mt-4 pt-4 border-top">
                            <button class="btn w-100 @(isNeedsHelp ? "btn-danger" : "btn-outline-danger") d-flex align-items-center justify-content-center gap-2" @onclick="ToggleHelp">
                                <span class="bi @(isNeedsHelp ? "bi-heart-pulse-fill flash-anim" : "bi-question-circle")"></span>
                                @(isNeedsHelp ? "Čekám na pomoc..." : "Potřebuji pomoct")
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Chat Area -->
                <div class="col-lg-8 col-md-7 d-flex flex-column h-100 overflow-hidden pb-5">
                    <div class="messages-area glass-card d-flex flex-column h-100 overflow-hidden">
                        <div id="chatLines" class="messages-list flex-grow-1 p-3 overflow-auto d-flex flex-column gap-3">
                            @foreach (var msg in messages)
                            {
                                var isOwn = msg.StudentId == student.Id;
                                <div class="message-row d-flex @(isOwn ? "justify-content-end" : "justify-content-start") fade-in">
                                    <div class="message-bubble @(msg.IsFromTeacher ? "teacher" : (isOwn ? "own" : (msg.StudentId == 0 ? "system" : "other"))) @(msg.IsProgressContribution ? "contribution" : "") @(msg.Metadata?.IsRelevant == false ? "is-irrelevant" : "") shadow-xs">
                                        @if (!isOwn && msg.StudentId != 0)
                                        {
                                            <div class="bubble-sender d-flex align-items-center gap-1">
                                                @if (msg.IsFromTeacher)
                                                {
                                                    <span class="bi bi-mortarboard-fill text-primary"></span>
                                                }
                                                @msg.Nickname
                                            </div>
                                        }
                                        
                                        @if (msg.IsFromTeacher)
                                        {
                                            <div class="teacher-tag"><span class="bi bi-stars"></span> Zpráva od učitele</div>
                                        }

                                        <div class="bubble-content">
                                            @if (msg.Content.Contains("$") || msg.Content.Contains("\\"))
                                            {
                                                <div class="math-container">@((MarkupString)msg.Content)</div>
                                            }
                                            else
                                            {
                                                @msg.Content
                                            }
                                        </div>

                                        <div class="bubble-footer d-flex justify-content-between align-items-center gap-3">
                                            @if (msg.IsProgressContribution)
                                            {
                                                <span class="contribution-badge"><span class="bi bi-patch-check-fill"></span> Pokrok</span>
                                            }
                                            <span class="bubble-time">@msg.Timestamp.ToLocalTime().ToString("HH:mm")</span>
                                        </div>

                                        @if (msg.Metadata != null && !string.IsNullOrEmpty(msg.Metadata.StudentFeedback))
                                        {
                                            <div class="ai-feedback mt-2 border-top pt-1">
                                                <span class="bi bi-info-circle"></span> @msg.Metadata.StudentFeedback
                                            </div>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                        
                        <div class="input-area p-3 bg-white border-top shadow-lg" style="z-index: 10;">
                            @if (showInactivityWarning)
                            {
                                <div class="alert alert-warning py-1 px-3 mb-2 rounded-3 border-0 x-small text-center fade-in">
                                    <span class="bi bi-clock-history"></span> Pár minut už jsi nic nenapsal(a). Pracuješ na úkolu?
                                </div>
                            }
                            <div class="d-flex gap-2 align-items-end">
                                <button class="btn btn-light rounded-circle shadow-xs" @onclick="StartVoice" title="Diktovat" style="width: 42px; height: 42px; padding: 0;">
                                    <span class="bi bi-mic-fill @(isListening ? "text-danger scale-up" : "text-primary")"></span>
                                </button>
                                <div class="flex-grow-1">
                                    <textarea id="chatInput" @bind="newMessage" @bind:event="oninput" @onkeydown="@HandleKeyDown"
                                              class="form-control border-0 bg-light py-2" rows="1" 
                                              placeholder="Napiš své řešení..."
                                              style="resize: none; border-radius: 12px;"></textarea>
                                </div>
                                <button class="btn btn-primary rounded-circle shadow-sm" @onclick="SendMessage" disabled="@(string.IsNullOrWhiteSpace(newMessage))" style="width: 42px; height: 42px; padding: 0;">
                                    <span class="bi bi-send-fill"></span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
}

@code {
    [Parameter] public int GroupId { get; set; }

    private Group? group;
    private Student? student;
    private List<ChatMessage> messages = new();
    private string newMessage = "";
    private bool isNeedsHelp = false;
    private bool isListening = false;
    private HubConnection? hubConnection;
    private DotNetObjectReference<Chat>? objRefContent;
    private bool isLoading = true;

    // Watchdog
    private System.Threading.Timer? inactivityTimer;
    private bool showInactivityWarning = false;
    private DateTime lastActivityTime = DateTime.UtcNow;

    private Dictionary<StudentStatus, string> statusLabels = new()
    {
        { StudentStatus.Active, "Aktivní" },
        { StudentStatus.NeedHelp, "Potřebuje pomoc" },
        { StudentStatus.Inactive, "Neaktivní" }
    };

    private string GetStatusBadgeClass(StudentStatus status)
    {
        return status switch
        {
            StudentStatus.Active => "bg-primary text-white",
            StudentStatus.NeedHelp => "bg-danger text-white flash-anim",
            StudentStatus.Inactive => "bg-secondary text-white",
            _ => "bg-info text-white"
        };
    }

    public class ChatMessage : Message
    {
        public MessageMetadata? Metadata { get; set; }
        public string? Nickname { get; set; }
    }

    public class MessageMetadata
    {
        public bool IsRelevant { get; set; } = true;
        public string? StudentFeedback { get; set; }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            var deviceId = await JSRuntime.InvokeAsync<string>("localStorage.getItem", "scio_device_id");
            var myNick = await JSRuntime.InvokeAsync<string>("localStorage.getItem", $"scio_group_{GroupId}_nick");

            // Fallback to query string if local storage is not yet synced (race condition fix)
            var uri = new Uri(NavigationManager.Uri);
            var query = Microsoft.AspNetCore.WebUtilities.QueryHelpers.ParseQuery(uri.Query);

            if (string.IsNullOrEmpty(myNick) && query.TryGetValue("nick", out var nickFromQuery))
            {
                myNick = nickFromQuery;
                await JSRuntime.InvokeVoidAsync("localStorage.setItem", $"scio_group_{GroupId}_nick", myNick);
            }

            if (string.IsNullOrEmpty(deviceId) && query.TryGetValue("device", out var deviceFromQuery))
            {
                deviceId = deviceFromQuery;
                await JSRuntime.InvokeVoidAsync("localStorage.setItem", "scio_device_id", deviceId);
            }

            if (string.IsNullOrEmpty(deviceId) || string.IsNullOrEmpty(myNick))
            {
                NavigationManager.NavigateTo($"join/{GroupId}");
                return;
            }

            student = await StudentService.GetStudentByNicknameAndDeviceAsync(GroupId, myNick, deviceId);
            if (student == null)
            {
                NavigationManager.NavigateTo($"join/{GroupId}");
                return;
            }

            group = student.Group;
            isNeedsHelp = student.Status == StudentStatus.NeedHelp;

            // Load history
            var history = await GroupService.GetGroupMessagesAsync(GroupId);
            messages = history.Select(m => new ChatMessage
            {
                Id = m.Id,
                StudentId = m.StudentId,
                Content = m.Content,
                Timestamp = m.Timestamp,
                IsProgressContribution = m.IsProgressContribution,
                IsFromTeacher = m.IsFromTeacher,
                Nickname = m.StudentId == 0 ? "Systém" : (m.IsFromTeacher ? "Učitel" : m.Student?.Nickname),
                Student = m.Student,
                IsSystemMessage = m.IsSystemMessage
            }).ToList();

            hubConnection = new HubConnectionBuilder()
                .WithUrl(NavigationManager.ToAbsoluteUri("sciohub"))
                .WithAutomaticReconnect()
                .Build();

            hubConnection.On<int, int, string, DateTime, bool, bool, string, bool>("ReceiveMessage", (mid, sid, content, time, isProgress, isRelevant, feedback, isFromTeacher) =>
            {
                var senderNickname = sid == 0 ? "Systém" : (isFromTeacher ? "Učitel" : (sid == student?.Id ? student?.Nickname : "Ostatní"));

                // Deduplicate
                if (messages.Any(m => m.Id == mid && mid != 0)) return;

                messages.Add(new ChatMessage
                {
                    Id = mid,
                    StudentId = sid,
                    Content = content,
                    Timestamp = time,
                    IsProgressContribution = isProgress,
                    IsFromTeacher = isFromTeacher,
                    Metadata = new MessageMetadata { IsRelevant = isRelevant, StudentFeedback = feedback },
                    Nickname = senderNickname
                });

                if (sid == student?.Id)
                {
                    ResetWatchdog();
                }

                InvokeAsync(StateHasChanged);
                ScrollToBottom();
                JSRuntime.InvokeVoidAsync("renderMath");
            });

            hubConnection.On<int, int>("MessageApproved", (mid, sid) =>
            {
                var msg = messages.FirstOrDefault(m => m.Id == mid);
                if (msg != null)
                {
                    msg.IsProgressContribution = true;
                    InvokeAsync(StateHasChanged);
                }
            });

            hubConnection.On<int, int>("ProgressUpdated", (sid, val) => {
                if (student != null && sid == student.Id && student.ProgressLog != null) {
                    student.ProgressLog.CurrentValue = val;
                    InvokeAsync(StateHasChanged);
                }
            });

            hubConnection.On<int, StudentStatus>("StatusChanged", (sid, status) => {
                if (student != null && sid == student.Id) {
                    student.Status = status;
                    isNeedsHelp = status == StudentStatus.NeedHelp;
                    InvokeAsync(StateHasChanged);
                }
            });

            hubConnection.Reconnected += async (connectionId) =>
            {
                if (hubConnection is not null && student != null)
                {
                    await hubConnection.InvokeAsync("JoinGroup", GroupId, student.DeviceId, student.Nickname, false);
                }
            };

            await hubConnection.StartAsync();
            await hubConnection.InvokeAsync("JoinGroup", GroupId, deviceId, myNick, false);

            StartWatchdog();
            
            isLoading = false;
            StateHasChanged();
            ScrollToBottom();
        }
    }

    private void StartWatchdog()
    {
        inactivityTimer = new System.Threading.Timer(WatchdogCheck, null, 10000, 10000);
    }

    private void ResetWatchdog()
    {
        lastActivityTime = DateTime.UtcNow;
        showInactivityWarning = false;
    }

    private async void WatchdogCheck(object? state)
    {
        var inactiveSeconds = (DateTime.UtcNow - lastActivityTime).TotalSeconds;
        
        bool shouldWarn = inactiveSeconds > 180; // 3 minutes
        bool shouldMarkInactive = inactiveSeconds > 300; // 5 minutes

        if (shouldMarkInactive && student?.Status != StudentStatus.Inactive)
        {
            if (hubConnection?.State == HubConnectionState.Connected)
            {
                // await hubConnection.InvokeAsync("SignalNeedHelp", GroupId, student?.Id, false); 
            }
        }

        if (shouldWarn != showInactivityWarning)
        {
            showInactivityWarning = shouldWarn;
            await InvokeAsync(StateHasChanged);
        }
    }

    private async Task SendMessage()
    {
        if (string.IsNullOrWhiteSpace(newMessage) || student == null || hubConnection == null) return;

        var content = newMessage;
        newMessage = "";

        await hubConnection.InvokeAsync("SendMessage", GroupId, student.Id, content);
    }

    private async Task HandleKeyDown(KeyboardEventArgs e)
    {
        if (e.Key == "Enter" && !e.ShiftKey)
        {
            await SendMessage();
        }
    }

    private async Task ToggleHelp()
    {
        if (student == null || hubConnection == null) return;
        isNeedsHelp = !isNeedsHelp;
        await hubConnection.InvokeAsync("SignalNeedHelp", GroupId, student.Id, isNeedsHelp);
    }

    private void ScrollToBottom()
    {
        JSRuntime.InvokeVoidAsync("scrollToBottom", "chatLines");
    }

    private async Task StartVoice()
    {
        isListening = true;
        objRefContent = DotNetObjectReference.Create(this);
        await JSRuntime.InvokeVoidAsync("startVoiceRecognition", objRefContent);
    }

    [JSInvokable]
    public void OnVoiceResult(string text)
    {
        newMessage += (string.IsNullOrEmpty(newMessage) ? "" : " ") + text;
        isListening = false;
        StateHasChanged();
    }

    public async ValueTask DisposeAsync()
    {
        objRefContent?.Dispose();
        inactivityTimer?.Dispose();
        if (hubConnection is not null)
        {
            await hubConnection.DisposeAsync();
        }
    }
}

<style>
