@page "/login"
@rendermode InteractiveServer
@using ScioApp.Services
@using ScioApp.Models
@using Microsoft.AspNetCore.Authentication
@using Microsoft.AspNetCore.Authentication.Google
@inject NavigationManager NavigationManager

<PageTitle>Přihlášení - Scio</PageTitle>

<div class="container min-vh-100 d-flex align-items-center justify-content-center py-5 fade-in">
    <div class="glass-card p-5 w-100" style="max-width: 480px;">
        <div class="text-center mb-5">
            <div class="bg-primary-custom rounded-circle d-inline-flex align-items-center justify-content-center mb-4 shadow-lg" style="width: 84px; height: 84px;">
                <svg width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
                </svg>
            </div>
            <h1 class="h2 mb-2">Vítejte zpět</h1>
            <p class="text-muted">Přihlaste se ke svému účtu Scio</p>
        </div>

        @if (!string.IsNullOrEmpty(Error))
        {
            <div class="alert alert-danger border-0 small py-3 mb-4 rounded-4 d-flex gap-3 bg-danger-subtle text-danger">
                <span class="bi bi-exclamation-triangle-fill fs-4 mt-1"></span>
                <div>
                   <div class="fw-bold">Chyba přístupu</div>
                   <div class="opacity-75">@Error</div>
                </div>
            </div>
        }

        @* Explicitly use Absolute Path for Form POST *@
        <form method="post" action="/scio/auth/login">
            <div class="mb-4">
                <label class="form-label small fw-bold text-muted uppercase-title mb-2">UŽIVATELSKÉ JMÉNO / LOGIN</label>
                <div class="input-group">
                    <span class="input-group-text bg-transparent border-end-0 border-white-10 text-primary p-3">
                        <span class="bi bi-person"></span>
                    </span>
                    <input name="login" type="text" class="form-control form-control-custom border-start-0" placeholder="Vaše jméno" required />
                </div>
            </div>

            <div class="mb-5">
                <label class="form-label small fw-bold text-muted uppercase-title mb-2">HESLO</label>
                <div class="input-group">
                    <span class="input-group-text bg-transparent border-end-0 border-white-10 text-primary p-3">
                        <span class="bi bi-shield-lock"></span>
                    </span>
                    <input name="password" type="password" class="form-control form-control-custom border-start-0" placeholder="Vaše heslo" required />
                </div>
            </div>

            <button type="submit" class="btn btn-primary-custom w-100 py-3 mb-4 fw-bold fs-5">
                <span>PŘIHLÁSIT SE</span>
            </button>

            <div class="hr-text text-muted mb-4"><span>NEBO</span></div>

            <button type="button" class="btn btn-outline-light w-100 py-3 d-flex align-items-center justify-content-center gap-3 rounded-4 mb-4 border-white-10" @onclick="LoginWithGoogle">
                <svg width="20" height="20" viewBox="0 0 24 24">
                    <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"/>
                    <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/>
                    <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l3.66-2.84z" fill="#FBBC05"/>
                    <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/>
                </svg>
                <span class="fw-bold">PŘIHLÁSIT PŘES GOOGLE</span>
            </button>

            <div class="text-center">
                <p class="text-muted small">Ještě nemáte účet? <a href="register" class="text-primary fw-bold text-decoration-none">Vytvořte si ho zde</a></p>
            </div>
        </form>
    </div>
</div>

<style>
    .hr-text { display: flex; align-items: center; }
    .hr-text::before, .hr-text::after { content: ""; flex: 1; border-bottom: 1px solid rgba(255, 255, 255, 0.1); }
    .hr-text span { padding: 0 15px; font-size: 0.7rem; font-weight: 800; letter-spacing: 2px; }
    .uppercase-title { font-size: 0.75rem; letter-spacing: 1px; color: var(--text-muted) !important; }
</style>

@code {
    [SupplyParameterFromQuery]
    public string? Error { get; set; }

    private void LoginWithGoogle() => NavigationManager.NavigateTo("/scio/auth/google-login", true);
}
