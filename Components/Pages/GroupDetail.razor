@page "/group/{GroupId:int}"
@rendermode InteractiveServer
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.SignalR.Client
@using ScioApp.Models
@using ScioApp.Services
@attribute [Authorize]
@inject IGroupService GroupService
@inject IStudentService StudentService
@inject IEmailService EmailService
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime
@inject HttpClient HttpClient
@implements IAsyncDisposable
@using System.Net.Http

<PageTitle>@group?.Name - Monitoring</PageTitle>

<div class="dashboard-wrapper pb-5">
    <div class="container-fluid pt-4">
        <!-- Header Section -->
        <div class="dashboard-header glass-card p-4 mb-4 fade-in">
            <div class="row align-items-center g-3">
                <div class="col-lg-6">
                    <nav aria-label="breadcrumb" class="mb-2">
                        <ol class="breadcrumb mb-0">
                            <li class="breadcrumb-item"><a href="" class="text-primary fw-medium">Dashboard</a></li>
                            <li class="breadcrumb-item active">@group?.Name</li>
                        </ol>
                    </nav>
                    <h1 class="h2 fw-bold mb-1">@group?.Name</h1>
                    <p class="text-muted mb-0"><span class="badge bg-primary-light text-primary me-2">Cíl</span> @group?.GoalDescription</p>
                </div>
                <div class="col-lg-6">
                    <div class="d-flex flex-wrap justify-content-lg-end align-items-center gap-4">
                        <div class="invite-info text-lg-end">
                            <div class="small text-muted fw-bold uppercase-title mb-1">Kód pro studenty</div>
                            <div class="d-flex align-items-center gap-2 justify-content-lg-end">
                                <span class="h3 mb-0 fw-800 text-primary">@group?.InviteCode</span>
                                <button class="btn btn-primary-light btn-sm" @onclick="ShowEmailModal" title="Pozvat e-mailem">
                                    <span class="bi bi-person-plus-fill"></span>
                                </button>
                            </div>
                        </div>
                        <div class="qr-box glass-card p-2 bg-white" style="cursor: pointer;" @onclick="ShowEmailModal">
                            <img src="https://api.qrserver.com/v1/create-qr-code/?size=100x100&data=@(Uri.EscapeDataString(NavigationManager.BaseUri + "join/" + group?.InviteCode))" 
                                 alt="QR" style="width: 64px; height: 64px;" />
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @if (isLoading)
        {
            <div class="text-center py-5 fade-in">
                <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status"></div>
                <div class="mt-3 text-muted">Načítám data ze třídy...</div>
            </div>
        }
        else
        {
            <div class="row g-4 h-100">
                <!-- Students Grid -->
                <div class="@(selectedStudentId == null ? "col-12" : "col-md-7 col-lg-8") transition-all">
                    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 g-3">
                        @foreach (var student in students.Values.OrderBy(s => s.Nickname))
                        {
                            <div class="col fade-in">
                                <div class="glass-card glass-card-hover h-100 p-3 student-card @(student.Status == StudentStatus.NeedHelp ? "border-danger active-help" : "") @(selectedStudentId == student.Id ? "border-primary ring-2" : "")"
                                     @onclick="() => SelectStudent(student.Id)" style="cursor: pointer;">
                                    
                                    <div class="d-flex justify-content-between align-items-start mb-3">
                                        <div class="student-avatar bg-light-blue rounded-circle d-flex align-items-center justify-content-center" style="width: 42px; height: 42px;">
                                            <span class="bi bi-person-fill text-primary"></span>
                                        </div>
                                        <span class="badge @GetStatusBadgeClass(student.Status)">
                                            @statusLabels[student.Status]
                                        </span>
                                    </div>

                                    <h6 class="fw-bold mb-3 text-truncate" title="@student.Nickname">@student.Nickname</h6>

                                    <div class="student-progress mb-3">
                                        @{
                                            var pct = student.ProgressLog?.Percentage ?? 0;
                                            var isDone = student.ProgressLog?.IsCompleted == true;
                                        }
                                        <div class="d-flex justify-content-between align-items-center mb-1 x-small fw-bold">
                                            <span class="text-muted">Pokrok</span>
                                            <span class="@(isDone ? "text-success" : "text-primary")">@((int)pct)%</span>
                                        </div>
                                        <div class="progress shadow-xs" style="height: 8px;">
                                            <div class="progress-bar @(isDone ? "bg-success" : "bg-primary")" 
                                                 style="width: @pct%"></div>
                                        </div>
                                    </div>

                                    @if (student.Status == StudentStatus.NeedHelp)
                                    {
                                        <div class="help-action mt-auto pt-2 border-top d-flex gap-2">
                                            <button class="btn btn-success btn-sm flex-grow-1 py-1" @onclick:stopPropagation="true" @onclick="() => ResolveHelp(student.Id)">
                                                <span class="bi bi-check2"></span> Vyřešit
                                            </button>
                                            <button class="btn btn-outline-danger btn-sm px-2" title="Smazat studenta" @onclick:stopPropagation="true" @onclick="() => RemoveStudent(student.Id)">
                                                <span class="bi bi-trash"></span>
                                            </button>
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                    </div>

                    @if (!students.Any())
                    {
                        <div class="text-center py-5 glass-card bg-white mt-4 border-dashed">
                            <div class="bi bi-people h1 text-muted opacity-25 mb-3"></div>
                            <h4 class="text-muted fw-light">Čekáme na první žáky...</h4>
                            <p class="text-muted small">Sdílejte kód <strong>@group?.InviteCode</strong></p>
                        </div>
                    }
                </div>

                <!-- Sidebar Detail -->
                @if (selectedStudentId != null && students.TryGetValue(selectedStudentId.Value, out var selStudent))
                {
                    <div class="col-md-5 col-lg-4 fade-in">
                        <div class="glass-card sticky-top d-flex flex-column h-screen-80 shadow-lg border-primary-light" style="top: 1rem;">
                            <div class="p-4 border-bottom bg-white rounded-top-4">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div class="d-flex align-items-center gap-3">
                                        <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center" style="width: 45px; height: 45px;">
                                            <span class="bi bi-person-fill h5 mb-0"></span>
                                        </div>
                                        <div>
                                            <h5 class="fw-bold mb-0">@selStudent.Nickname</h5>
                                            <span class="x-small text-muted">@GetLastActivityText(selStudent.LastActivityAt)</span>
                                        </div>
                                    </div>
                                    <button class="btn-close" @onclick="() => selectedStudentId = null"></button>
                                </div>
                                <div class="mt-3 d-flex gap-2">
                                    <button class="btn btn-outline-danger btn-sm flex-grow-1" @onclick="() => RemoveStudent(selStudent.Id)">
                                        <span class="bi bi-trash me-1"></span> Odstranit
                                    </button>
                                    @if (selStudent.Status == StudentStatus.NeedHelp)
                                    {
                                        <button class="btn btn-success btn-sm flex-grow-1" @onclick="() => ResolveHelp(selStudent.Id)">
                                            <span class="bi bi-check2-circle me-1"></span> Vyřešit pomoc
                                        </button>
                                    }
                                </div>
                            </div>

                            <div class="flex-grow-1 overflow-auto p-3">
                                <div class="small fw-bold text-muted uppercase-title mb-3">Log komunikace</div>
                                <div class="timeline d-flex flex-column gap-3">
                                    @{
                                        var studentMessages = allMessages.Where(m => m.StudentId == selStudent.Id).OrderByDescending(m => m.Timestamp);
                                        if (!studentMessages.Any())
                                        {
                                            <div class="text-center py-5 text-muted opacity-50 small font-italic">
                                                Žádná zpráva k zobrazení.
                                            </div>
                                        }
                                        else
                                        {
                                            @foreach (var m in studentMessages)
                                            {
                                                <div class="timeline-item glass-card p-3 @(m.IsProgressContribution ? "border-success bg-success-light" : (m.IsFromTeacher ? "border-primary bg-primary-light" : "bg-white"))">
                                                    <div class="d-flex justify-content-between mb-2">
                                                        <span class="x-small fw-bold">
                                                            @if (m.IsFromTeacher)
                                                            {
                                                                <span class="text-primary"><span class="bi bi-person-workspace"></span> Vy (Učitel)</span>
                                                            }
                                                            else
                                                            {
                                                                <span class="text-muted"><span class="bi bi-person"></span> Student</span>
                                                            }
                                                        </span>
                                                        <span class="x-small text-muted">@m.Timestamp.ToLocalTime().ToString("HH:mm")</span>
                                                    </div>
                                                    <div class="small mb-2">@m.Content</div>
                                                    <div class="d-flex justify-content-end">
                                                        @if (m.IsProgressContribution)
                                                        {
                                                            <span class="badge bg-success py-1"><span class="bi bi-check-circle"></span> Uznáno</span>
                                                        }
                                                        else if (!m.IsFromTeacher)
                                                        {
                                                            <button class="btn btn-xs btn-outline-success" @onclick="() => ApproveMessage(m.Id)">
                                                                <span class="bi bi-plus-circle"></span> Uznat jako pokrok
                                                            </button>
                                                        }
                                                    </div>
                                                </div>
                                            }
                                        }
                                    }
                                </div>
                            </div>

                            <div class="p-3 border-top bg-light rounded-bottom-4">
                                <div class="input-group">
                                    <input type="text" class="form-control border-0 shadow-xs" @bind="teacherMessageText" 
                                           @bind:event="oninput" @onkeydown="@HandleTeacherKey"
                                           placeholder="Zpráva studentovi..." />
                                    <button class="btn btn-primary" @onclick="SendTeacherMessage" 
                                            disabled="@(string.IsNullOrWhiteSpace(teacherMessageText))">
                                        <span class="bi bi-send"></span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>

@if (isEmailModalVisible)
{
    <div class="modal fade show d-block" tabindex="-1" style="background: rgba(15, 23, 42, 0.6); backdrop-filter: blur(8px); z-index: 1050;">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="glass-card modal-content border-0 p-2 overflow-hidden">
                <div class="modal-header border-0 pb-0">
                    <h5 class="fw-bold mb-0 text-primary">Hromadná pozvánka</h5>
                    <button type="button" class="btn-close" @onclick="HideEmailModal"></button>
                </div>
                <div class="modal-body p-4">
                    <div class="mb-3">
                        <label class="form-label x-small fw-bold text-muted uppercase-title">E-maily studentů (středník `;` )</label>
                        <input type="text" class="form-control" @bind="emailRecipients" placeholder="např. zaci@skola.cz; petr@seznam.cz" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label x-small fw-bold text-muted uppercase-title">Text pozvánky</label>
                        <textarea class="form-control bg-light" @bind="emailBody" rows="6" style="resize: none;"></textarea>
                    </div>
                    
                    @if (!string.IsNullOrEmpty(emailStatus))
                    {
                        <div class="alert @(emailStatus.StartsWith("Chyba") ? "alert-danger" : "alert-success") py-2 rounded-3 fade-in">
                            <span class="bi @(emailStatus.StartsWith("Chyba") ? "bi-exclamation-octagon" : "bi-check-circle") me-2"></span> @emailStatus
                        </div>
                    }
                </div>
                <div class="modal-footer border-0 pt-0 pb-3">
                    <button type="button" class="btn btn-light px-4" @onclick="HideEmailModal" disabled="@isSendingEmail">Zavřít</button>
                    <button type="button" class="btn btn-primary px-5 shadow-sm" @onclick="SendEmails" disabled="@(string.IsNullOrEmpty(emailRecipients) || isSendingEmail)">
                        @if (isSendingEmail)
                        {
                            <span class="spinner-border spinner-border-sm me-2"></span> <span>Odesílám...</span>
                        }
                        else
                        {
                            <span class="bi bi-send-fill me-2"></span> <span>Odeslat</span>
                        }
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public int GroupId { get; set; }

    private Group? group;
    private Dictionary<int, Student> students = new();
    private List<Message> allMessages = new();
    private int? selectedStudentId;
    private bool isLoading = true;
    private HubConnection? hubConnection;

    // Email fields
    private bool isEmailModalVisible = false;
    private bool isSendingEmail = false;
    private string emailRecipients = "";
    private string emailSubject = "";
    private string emailBody = "";
    private string emailStatus = "";
    private string teacherMessageText = "";

    private async Task HandleTeacherKey(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            await SendTeacherMessage();
        }
    }

    private async Task SendTeacherMessage()
    {
        if (string.IsNullOrWhiteSpace(teacherMessageText) || selectedStudentId == null) return;
        
        if (hubConnection is not null)
        {
            await hubConnection.InvokeAsync("SendTeacherMessage", GroupId, selectedStudentId.Value, teacherMessageText);
            teacherMessageText = "";
            InvokeAsync(StateHasChanged);
        }
    }

    private async Task RemoveStudent(int studentId)
    {
        bool confirmed = await JSRuntime.InvokeAsync<bool>("confirm", $"Opravdu chcete odstranit studenta? Smažou se i jeho zprávy.");
        if (!confirmed) return;

        var success = await StudentService.DeleteStudentAsync(studentId);
        if (success)
        {
            if (selectedStudentId == studentId) selectedStudentId = null;
            await RefreshStudents();
            InvokeAsync(StateHasChanged);
        }
    }

    private readonly Dictionary<StudentStatus, string> statusLabels = new()
    {
        { StudentStatus.Active, "Aktivní" },
        { StudentStatus.NeedHelp, "Pomoc!" },
        { StudentStatus.Inactive, "Neaktivní" },
        { StudentStatus.Completed, "Hotovo" }
    };

    protected override async Task OnInitializedAsync()
    {
        group = await GroupService.GetGroupByIdAsync(GroupId);
        if (group != null)
        {
            foreach (var s in group.Students)
            {
                students[s.Id] = s;
            }
            allMessages = await GroupService.GetGroupMessagesAsync(GroupId);
        }
        isLoading = false;

        hubConnection = new HubConnectionBuilder()
            .WithUrl(NavigationManager.ToAbsoluteUri("sciohub"))
            .WithAutomaticReconnect()
            .Build();

        hubConnection.On<string>("UserJoined", async (nickname) =>
        {
            await RefreshStudents();
            await InvokeAsync(StateHasChanged);
        });

        hubConnection.On<int, int, string, DateTime, bool, bool, string, bool>("ReceiveMessage", async (mid, sid, content, time, isProgress, isRelevant, feedback, isFromTeacher) =>
        {
            if (!students.ContainsKey(sid)) await RefreshStudents();

            if (students.TryGetValue(sid, out var s)) s.LastActivityAt = DateTime.UtcNow;
                
            if (!allMessages.Any(m => m.Id == mid && mid != 0))
            {
                allMessages.Add(new Message { 
                    Id = mid, StudentId = sid, Content = content, Timestamp = time, 
                    IsProgressContribution = isProgress, IsFromTeacher = isFromTeacher
                });
            }
            await InvokeAsync(StateHasChanged);
        });

        hubConnection.On<int, int>("MessageApproved", (mid, sid) =>
        {
            var msg = allMessages.FirstOrDefault(m => m.Id == mid);
            if (msg != null)
            {
                msg.IsProgressContribution = true;
                InvokeAsync(StateHasChanged);
            }
        });

        hubConnection.On<int, int>("ProgressUpdated", (sid, val) =>
        {
            if (students.TryGetValue(sid, out var s) && s.ProgressLog != null)
            {
                s.ProgressLog.CurrentValue = val;
                s.ProgressLog.IsCompleted = val >= (group?.TargetValue ?? 0);
                InvokeAsync(StateHasChanged);
            }
        });

        hubConnection.On<int, StudentStatus>("StatusChanged", (sid, status) =>
        {
            if (students.TryGetValue(sid, out var s))
            {
                s.Status = status;
                InvokeAsync(StateHasChanged);
            }
        });

        await hubConnection.StartAsync();
        await hubConnection.InvokeAsync("JoinGroup", GroupId, "", "", true);
    }

    private void SelectStudent(int id) => selectedStudentId = id;

    private void ShowEmailModal()
    {
        emailStatus = "";
        emailSubject = $"Pozvánka ke spolupráci: {group?.Name}";
        emailBody = $"Ahoj, připoj se do skupiny {group?.Name}!\nTvé zadání: {group?.GoalDescription}\n\nTěším se na tvoji práci!\nUčitel";
        isEmailModalVisible = true;
    }

    private void HideEmailModal() => isEmailModalVisible = false;

    private async Task SendEmails()
    {
        if (string.IsNullOrWhiteSpace(emailRecipients)) return;
        isSendingEmail = true; emailStatus = ""; StateHasChanged();

        try
        {
            var qrUrl = $"https://api.qrserver.com/v1/create-qr-code/?size=300x300&data={Uri.EscapeDataString(NavigationManager.BaseUri + "join/" + group?.InviteCode)}";
            byte[]? qrBytes = await HttpClient.GetByteArrayAsync(qrUrl);
            var joinUrl = $"{NavigationManager.BaseUri}join/{group?.InviteCode}";
            
            var htmlFinal = $@"<html><body style='font-family: Arial; padding: 20px;'><h2>Dobrý den, posílám pozvánku.</h2><p>{emailBody.Replace("\n","<br/>")}</p><a href='{joinUrl}' style='padding: 10px; background: #4f46e5; color: white;'>PŘIPOJIT SE</a></body></html>";

            await EmailService.SendEmailAsync(emailRecipients, emailSubject, htmlFinal, $"qr_{group?.InviteCode}.jpg", qrBytes);
            emailStatus = "Odesláno!"; await Task.Delay(1500); HideEmailModal();
        }
        catch (Exception ex) { emailStatus = $"Chyba: {ex.Message}"; }
        finally { isSendingEmail = false; }
    }

    private async Task ApproveMessage(int messageId)
    {
        if (hubConnection is not null) await hubConnection.InvokeAsync("ApproveMessage", GroupId, messageId);
    }

    private async Task ResolveHelp(int studentId)
    {
        if (hubConnection is not null) await hubConnection.InvokeAsync("SignalNeedHelp", GroupId, studentId, false);
    }

    private async Task RefreshStudents()
    {
        var updatedGroup = await GroupService.GetGroupByIdAsync(GroupId);
        if (updatedGroup != null)
        {
            foreach (var s in updatedGroup.Students) students[s.Id] = s;
        }
    }

    private string GetStatusBadgeClass(StudentStatus status) => status switch
    {
        StudentStatus.Active => "bg-primary-light text-primary",
        StudentStatus.NeedHelp => "bg-light-danger text-danger flash-anim",
        StudentStatus.Inactive => "bg-light text-muted border",
        StudentStatus.Completed => "bg-success text-white",
        _ => "bg-secondary"
    };

    private string GetLastActivityText(DateTime lastActivity)
    {
        var diff = DateTime.UtcNow - lastActivity;
        if (diff.TotalSeconds < 30) return "právě teď";
        return $"před {Math.Floor(diff.TotalMinutes)}m";
    }

    public async ValueTask DisposeAsync()
    {
        if (hubConnection is not null) await hubConnection.DisposeAsync();
    }
}

