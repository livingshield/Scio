@page "/group/{GroupId:int}"
@rendermode InteractiveServer
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.SignalR.Client
@using ScioApp.Models
@using ScioApp.Services
@attribute [Authorize]
@inject IGroupService GroupService
@inject IEmailService EmailService
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime
@inject HttpClient HttpClient
@implements IAsyncDisposable
@using System.Net.Http

<PageTitle>Sledování výuky - Scio</PageTitle>

<div class="container-fluid mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="">Dashboard</a></li>
            <li class="breadcrumb-item active">@group?.Name</li>
        </ol>
    </nav>

    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-3">
        <div>
            <h1 class="h3 mb-1">@group?.Name</h1>
            <p class="text-muted mb-0"><strong>Cíl:</strong> @group?.GoalDescription</p>
        </div>
        <div class="text-end d-flex align-items-center gap-3">
            <div>
                <div class="h5 mb-0">Kod pro studenty: <span class="badge bg-primary fs-5">@group?.InviteCode</span></div>
                <div class="small text-muted mb-2">Aktivní monitoring probíhá</div>
                <button class="btn btn-outline-primary btn-sm px-3" @onclick="ShowEmailModal">
                    <span class="bi bi-envelope-plus"></span> Odeslat pozvánku e-mailem
                </button>
            </div>
            <div class="qr-container bg-white p-1 border rounded shadow-sm">
                <img src="https://api.qrserver.com/v1/create-qr-code/?size=100x100&data=@(Uri.EscapeDataString(NavigationManager.BaseUri + "join/" + group?.InviteCode))" 
                     alt="QR Code" style="width: 80px; height: 80px;" />
            </div>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border" role="status"></div>
        </div>
    }
    else
    {
        <div class="row g-4">
            <div class="@(selectedStudentId == null ? "col-12" : "col-md-7 col-lg-8")">
                <div class="row row-cols-1 row-cols-sm-2 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 g-3">
                    @foreach (var student in students.Values.OrderBy(s => s.Nickname))
                    {
                        <div class="col">
                            <div class="card h-100 student-monitor-card @(student.Status == StudentStatus.NeedHelp ? "border-danger bg-light-danger" : "") @(selectedStudentId == student.Id ? "border-primary shadow" : "")"
                                 @onclick="() => SelectStudent(student.Id)" style="cursor: pointer;">
                                <div class="card-body p-3">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <h6 class="card-title mb-0 text-truncate" style="max-width: 120px;" title="@student.Nickname">@student.Nickname</h6>
                                        <span class="badge @GetStatusBadgeClass(student.Status)">
                                            @statusLabels[student.Status]
                                        </span>
                                    </div>

                                    @if (group?.GoalType == GoalType.Boolean)
                                    {
                                        @if (student.ProgressLog?.IsCompleted == true)
                                        {
                                            <div class="text-center mb-2">
                                                <span class="text-success fs-3">✔</span>
                                                <div class="x-small fw-bold text-success">Splněno</div>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="text-center mb-2">
                                                <span class="text-secondary fs-3">☐</span>
                                                <div class="x-small text-muted">Nesplněno</div>
                                            </div>
                                        }
                                    }
                                    else
                                    {
                                        <div class="progress mb-2" style="height: 12px;">
                                            <div class="progress-bar @(student.Status == StudentStatus.Completed ? "bg-success" : "bg-primary")" 
                                                 role="progressbar" 
                                                 style="width: @(student.ProgressLog?.Percentage ?? 0)%"
                                                 aria-valuenow="@(student.ProgressLog?.Percentage ?? 0)" 
                                                 aria-valuemin="0" aria-valuemax="100">
                                            </div>
                                        </div>
                                        
                                        <div class="d-flex justify-content-between x-small">
                                            <span>Pokrok: <strong>@(student.ProgressLog?.CurrentValue ?? 0) / @(group?.TargetValue ?? 0)</strong></span>
                                            <span class="text-muted">@GetLastActivityText(student.LastActivityAt)</span>
                                        </div>
                                    }
                                </div>
                                @if (student.Status == StudentStatus.NeedHelp)
                                {
                                    <div class="card-footer bg-danger text-white py-1 text-center x-small fw-bold border-top-0 d-flex align-items-center justify-content-center gap-2">
                                        <span>POMOC!</span>
                                        <button class="btn btn-sm btn-light py-0 px-2" style="font-size: 0.7rem;" @onclick:stopPropagation="true" @onclick="() => ResolveHelp(student.Id)">
                                            ✔ Vyřešeno
                                        </button>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                </div>

                @if (!students.Any())
                {
                    <div class="text-center py-5 border rounded bg-light mt-4 px-3">
                        <div class="h4 text-muted mb-3">Zatím se nepřipojili žádní studenti</div>
                        <p class="mb-0">Sdílejte kód <strong>@group?.InviteCode</strong> nebo QR kód výše.</p>
                        <div class="mt-3">
                            <small>Adresa pro připojení: <br class="d-md-none" /> <code>@(NavigationManager.BaseUri)join/@group?.InviteCode</code></small>
                        </div>
                    </div>
                }
            </div>

            @if (selectedStudentId != null && students.TryGetValue(selectedStudentId.Value, out var selStudent))
            {
                <div class="col-md-5 col-lg-4">
                    <div class="card shadow-sm sticky-top" style="top: 1rem; max-height: 80vh; overflow: hidden; display: flex; flex-direction: column;">
                        <div class="card-header bg-white d-flex justify-content-between align-items-center">
                            <h5 class="mb-0 text-truncate">Detail: @selStudent.Nickname</h5>
                            <button class="btn-close" @onclick="() => selectedStudentId = null"></button>
                        </div>
                        <div class="card-body overflow-auto p-0">
                            <div class="p-3 bg-light border-bottom">
                                <div class="small fw-bold text-muted mb-1">Historie komunikace studenta:</div>
                            </div>
                            <div class="p-3">
                                @{
                                    var studentMessages = allMessages.Where(m => m.StudentId == selStudent.Id).OrderByDescending(m => m.Timestamp);
                                    if (!studentMessages.Any())
                                    {
                                        <div class="text-center py-4 text-muted small">
                                            Zatím žádné zprávy od tohoto studenta.
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="list-group list-group-flush">
                                            @foreach (var m in studentMessages)
                                            {
                                                <div class="list-group-item @(m.IsProgressContribution ? "border-start border-4 border-success bg-white shadow-xs" : "bg-transparent") mb-2 rounded border-light">
                                                    <div class="d-flex justify-content-between mb-1 gap-2">
                                                        @if (m.IsProgressContribution)
                                                        {
                                                            <span class="badge bg-success py-0" style="height: fit-content;">Uznaný pokrok</span>
                                                        }
                                                        else
                                                        {
                                                            <button class="btn btn-xs btn-outline-success py-0 border-0" @onclick="() => ApproveMessage(m.Id)" title="Klikněte pro uznání pokroku">
                                                                <span class="bi bi-plus-circle"></span> Uznat jako pokrok
                                                            </button>
                                                        }
                                                        <small class="text-muted flex-shrink-0">@m.Timestamp.ToLocalTime().ToString("HH:mm")</small>
                                                    </div>
                                                    <div class="small text-break">@m.Content</div>
                                                </div>
                                            }
                                        </div>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@if (isEmailModalVisible)
{
    <div class="modal fade show d-block" tabindex="-1" style="background: rgba(0,0,0,0.5); z-index: 1050;">
        <div class="modal-dialog modal-lg">
            <div class="modal-content shadow-lg border-0">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title"><span class="bi bi-send-fill mr-2"></span> Odeslat pozvánku studentům</h5>
                    <button type="button" class="btn-close btn-close-white" @onclick="HideEmailModal"></button>
                </div>
                <div class="modal-body p-4">
                    <div class="mb-3">
                        <label class="form-label fw-bold">E-mailové adresy studentů (oddělujte středníkem `;` )</label>
                        <input type="text" class="form-control" @bind="emailRecipients" placeholder="jan@skola.cz; petr@skola.cz" />
                        <div class="form-text">Adresy oddělte středníkem. QR kód bude automaticky přiložen jako soubor .jpg.</div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Předmět e-mailu</label>
                        <input type="text" class="form-control" @bind="emailSubject" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Text zprávy pro studenty</label>
                        <textarea class="form-control" @bind="emailBody" rows="8" style="background: #ffffff; border: 1px solid #dee2e6;" placeholder="Např.: Ahoj, posílám pozvánku k dnešnímu úkolu."></textarea>
                        <div class="form-text">Zadejte prostý text. Odkaz na úkol a formátování budou doplněny automaticky.</div>
                    </div>
                    
                    @if (!string.IsNullOrEmpty(emailStatus))
                    {
                        <div class="alert @(emailStatus.StartsWith("Chyba") ? "alert-danger" : "alert-success") py-2 mt-3">
                            <span class="bi @(emailStatus.StartsWith("Chyba") ? "bi-exclamation-octagon" : "bi-check-circle")"></span> @emailStatus
                        </div>
                    }
                </div>
                <div class="modal-footer bg-light p-3">
                    <button type="button" class="btn btn-secondary px-4" @onclick="HideEmailModal" disabled="@isSendingEmail">Zavřít</button>
                    <button type="button" class="btn btn-primary px-4" @onclick="SendEmails" disabled="@(string.IsNullOrEmpty(emailRecipients) || isSendingEmail)">
                        @if (isSendingEmail)
                        {
                            <span class="spinner-border spinner-border-sm mr-2" role="status"></span> <span>Odesílám...</span>
                        }
                        else
                        {
                            <span class="bi bi-send"></span> <span>Odeslat vše</span>
                        }
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public int GroupId { get; set; }

    private Group? group;
    private Dictionary<int, Student> students = new();
    private List<Message> allMessages = new();
    private int? selectedStudentId;
    private bool isLoading = true;
    private HubConnection? hubConnection;

    // Email fields
    private bool isEmailModalVisible = false;
    private bool isSendingEmail = false;
    private string emailRecipients = "";
    private string emailSubject = "";
    private string emailBody = "";
    private string emailStatus = "";

    private readonly Dictionary<StudentStatus, string> statusLabels = new()
    {
        { StudentStatus.Active, "Aktivní" },
        { StudentStatus.NeedHelp, "Pomoc!" },
        { StudentStatus.Inactive, "Neaktivní" },
        { StudentStatus.Completed, "Hotovo" }
    };

    protected override async Task OnInitializedAsync()
    {
        group = await GroupService.GetGroupByIdAsync(GroupId);
        if (group != null)
        {
            foreach (var s in group.Students)
            {
                students[s.Id] = s;
            }
            allMessages = await GroupService.GetGroupMessagesAsync(GroupId);
        }
        isLoading = false;

        hubConnection = new HubConnectionBuilder()
            .WithUrl(NavigationManager.ToAbsoluteUri("sciohub"))
            .WithAutomaticReconnect()
            .Build();

        hubConnection.On<string>("UserJoined", async (nickname) =>
        {
            await RefreshStudents();
            StateHasChanged();
        });

        hubConnection.On<int, int, string, DateTime, bool, bool, string>("ReceiveMessage", (mid, sid, content, time, isProgress, isRelevant, feedback) =>
        {
            if (students.TryGetValue(sid, out var s))
            {
                s.LastActivityAt = DateTime.UtcNow;
                
                // Deduplicate: check if message with this ID already exists
                if (!allMessages.Any(m => m.Id == mid && mid != 0))
                {
                    allMessages.Add(new Message { 
                        Id = mid, 
                        StudentId = sid, 
                        Content = content, 
                        Timestamp = time, 
                        IsProgressContribution = isProgress 
                    });
                }
                StateHasChanged();
            }
        });

        hubConnection.On<int, int>("MessageApproved", (mid, sid) =>
        {
            var msg = allMessages.FirstOrDefault(m => m.Id == mid);
            if (msg != null)
            {
                msg.IsProgressContribution = true;
                StateHasChanged();
            }
        });

        hubConnection.On<int, int>("ProgressUpdated", (sid, val) =>
        {
            if (students.TryGetValue(sid, out var s) && s.ProgressLog != null)
            {
                s.ProgressLog.CurrentValue = val;
                s.ProgressLog.IsCompleted = val >= (group?.TargetValue ?? 0);
                StateHasChanged();
            }
        });

        hubConnection.On<int, StudentStatus>("StatusChanged", (sid, status) =>
        {
            if (students.TryGetValue(sid, out var s))
            {
                s.Status = status;
                StateHasChanged();
            }
        });

        await hubConnection.StartAsync();
        await hubConnection.InvokeAsync("JoinGroup", GroupId, "", "", true);
    }

    private void SelectStudent(int id)
    {
        selectedStudentId = id;
    }

    private void ShowEmailModal()
    {
        emailStatus = "";
        emailSubject = $"Pozvánka ke spolupráci: {group?.Name}";
        
        emailBody = $@"Ahoj, připoj se do skupiny {group?.Name}!

Právě jsem založil(a) novou aktivitu v aplikaci Scio. Tvým cílem je:
{group?.GoalDescription}

Do skupiny se připojíš kliknutím na odkaz níže nebo po naskenování QR kódu v příloze e-mailu.

Těším se na tvou práci!
Tvůj učitel";
        isEmailModalVisible = true;
    }

    private void HideEmailModal() => isEmailModalVisible = false;

    private async Task SendEmails()
    {
        if (string.IsNullOrWhiteSpace(emailRecipients)) return;

        isSendingEmail = true;
        emailStatus = "";
        StateHasChanged();

        try
        {
            // Prepare QR code data
            var qrUrl = $"https://api.qrserver.com/v1/create-qr-code/?size=300x300&data={Uri.EscapeDataString(NavigationManager.BaseUri + "join/" + group?.InviteCode)}";
            byte[]? qrBytes = null;
            
            try 
            {
                qrBytes = await HttpClient.GetByteArrayAsync(qrUrl);
            }
            catch(Exception ex)
            {
                Console.WriteLine($"QR code download failed: {ex.Message}");
            }

            var printableBody = emailBody.Replace("\n", "<br />");
            var joinUrl = $"{NavigationManager.BaseUri}join/{group?.InviteCode}";
            
            var htmlFinal = $@"<html>
<body style='font-family: Arial, sans-serif; line-height: 1.6; color: #333;'>
    <div style='max-width: 600px; margin: 0 auto; border: 1px solid #eee; padding: 20px; border-radius: 10px;'>
        <h2 style='color: #0d6efd; border-bottom: 2px solid #0d6efd; padding-bottom: 10px;'>Pozvánka: {group?.Name}</h2>
        <div style='margin: 20px 0;'>
            {printableBody}
        </div>
        <div style='text-align: center; margin: 30px 0;'>
            <a href='{joinUrl}' style='display: inline-block; padding: 12px 25px; background: #0d6efd; color: white; text-decoration: none; border-radius: 5px; font-weight: bold;'>VSTOUPIT DO SKUPINY</a>
        </div>
        <p style='font-size: 0.9rem; color: #666;'>Odkaz: <a href='{joinUrl}'>{joinUrl}</a></p>
        <p style='font-size: 0.8rem; color: #999; margin-top: 30px; border-top: 1px solid #eee; pt: 10px;'>Tento e-mail byl odeslán z aplikace Scio Monitoring.</p>
    </div>
</body>
</html>";

            await EmailService.SendEmailAsync(
                emailRecipients, 
                emailSubject, 
                htmlFinal, 
                $"pozvanka_qr_{group?.InviteCode}.jpg", 
                qrBytes);
            
            emailStatus = "E-maily byly úspěšně odeslány všem studentům!";
            await Task.Delay(2000);
            HideEmailModal();
        }
        catch (Exception ex)
        {
            emailStatus = $"Chyba při odesílání: {ex.Message}";
        }
        finally
        {
            isSendingEmail = false;
        }
    }

    private async Task MarkStatus(int studentId, StudentStatus status)
    {
        if (hubConnection is not null)
        {
            await hubConnection.InvokeAsync("SignalNeedHelp", GroupId, studentId, status == StudentStatus.NeedHelp);
            // This is a bit of a hack since SignalNeedHelp only takes bool. 
            // In a real app we'd have a specialized "SetStatus" method.
        }
    }

    private async Task ApproveMessage(int messageId)
    {
        if (hubConnection is not null)
        {
            await hubConnection.InvokeAsync("ApproveMessage", GroupId, messageId);
            
            // Local update for immediate feedback
            var msg = allMessages.FirstOrDefault(m => m.Id == messageId);
            if (msg != null)
            {
                msg.IsProgressContribution = true;
                StateHasChanged();
            }
        }
    }

    private async Task ResolveHelp(int studentId)
    {
        if (hubConnection is not null)
        {
            await hubConnection.InvokeAsync("SignalNeedHelp", GroupId, studentId, false);
            if (students.TryGetValue(studentId, out var s))
            {
                s.Status = StudentStatus.Active;
                StateHasChanged();
            }
        }
    }

    private async Task RefreshStudents()
    {
        var updatedGroup = await GroupService.GetGroupByIdAsync(GroupId);
        if (updatedGroup != null)
        {
            foreach (var s in updatedGroup.Students)
            {
                students[s.Id] = s;
            }
        }
    }

    private string GetStatusBadgeClass(StudentStatus status) => status switch
    {
        StudentStatus.Active => "bg-primary",
        StudentStatus.NeedHelp => "bg-danger flash-anim",
        StudentStatus.Inactive => "bg-warning text-dark",
        StudentStatus.Completed => "bg-success",
        _ => "bg-secondary"
    };

    private string GetLastActivityText(DateTime lastActivity)
    {
        var diff = DateTime.UtcNow - lastActivity;
        if (diff.TotalSeconds < 30) return "nyní";
        if (diff.TotalSeconds < 60) return "před < 1m";
        return $"před {Math.Floor(diff.TotalMinutes)}m";
    }

    public async ValueTask DisposeAsync()
    {
        if (hubConnection is not null)
        {
            await hubConnection.DisposeAsync();
        }
    }
}

